@model IEnumerable<GYM_MVC.ViewModels.ExerciseViewModels.EditExerciseVM>

@{
    ViewData["Title"] = "Index";
    @if (TempData["SuccessMessage"] != null)
    {
                <div class="alert alert-success">
            @TempData["SuccessMessage"]
                </div>
    }

    var workoutPlanId = ViewBag.WorkoutPlanId;

}

<h2 class="text-center ">Exercises for this work plan</h2>


<table class="table mt-3 table-bordered  text-center">
    <thead>
        <tr>

            <th >

                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repetitions)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestTime)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.DayOfWeek)
            </th>

            <th> <span>Actoins</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td >
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Repetitions)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Sets)
                </td>
                 <td >
                    @Html.DisplayFor(modelItem => item.RestTime)
                </td>
                    <td >
                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                </td>

                    <td >
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                        @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-danger p-0 m-0 align-baseline">Delete</button>
                        </form>


                </td>
            </tr>
        }



        @if (!Model.Any())
        {
                <tr>
                    <td colspan="6" class="text-center text-muted fs-2">No Exercises to show</td>
                </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center gap-3 my-4">
    <a asp-action="Create" asp-route-workoutPlanId="@workoutPlanId" class="btn btn-primary px-4">Add New Exercise</a>

    <form asp-controller="WorkoutPlan" asp-action="ViewWorkoutPlan" asp-route-workoutPlanId="@workoutPlanId" method="get">
        <button type="submit" class="btn btn-success px-4">Finish Workout Plan</button>
    </form>
</div>

@section Scripts {
        <script>
            function confirmDelete() {
                return confirm("Are you sure you want to delete this exercise?");
            }
        </script>
}
    <style>
    .table tbody tr:nth-child(even) td:nth-child(even),
    .table tbody tr:nth-child(odd) td:nth-child(odd) {
        background-color: #e8f0fe; /* أزرق فاتح */
    }

    .table tbody tr:nth-child(even) td:nth-child(odd),
    .table tbody tr:nth-child(odd) td:nth-child(even) {
        background-color: #ffffff; /* أبيض */
    }

    </style>


