@model GYM_MVC.ViewModels.ExerciseViewModels.ExerciseVM

@{
    ViewData["Title"] = "Create New Exercise";
}

<h2 class="mb-4 text-center text-primary">Create New Exercise</h2>

<hr class="mb-4" />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow rounded-4 border-0">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Exercise Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Push-ups" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Repetitions" class="form-label fw-semibold">Repetitions</label>
                        <input asp-for="Repetitions" class="form-control" placeholder="e.g., 15" />
                        <span asp-validation-for="Repetitions" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Sets" class="form-label fw-semibold">Sets</label>
                        <input asp-for="Sets" class="form-control" placeholder="e.g., 3" />
                        <span asp-validation-for="Sets" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RestTime" class="form-label fw-semibold">Rest Time (seconds)</label>
                        <input asp-for="RestTime" class="form-control" placeholder="e.g., 60" />
                        <span asp-validation-for="RestTime" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="DayOfWeek" class="form-label fw-bold">Day of the Week</label>
                        <select asp-for="DayOfWeek" class="form-select" asp-items="ViewBag.DaysOfWeek">
                            <option value="">-- Select Day --</option>
                        </select>
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary w-45">Create</button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-45">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



