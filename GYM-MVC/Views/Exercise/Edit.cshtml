@model GYM_MVC.ViewModels.ExerciseViewModels.EditExerciseVM
@{
    ViewData["Title"] = "Edit Exercise";
}

<h2 class="text-center text-primary mb-4">Edit Exercise</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Repetitions" class="form-label fw-bold"></label>
                        <input asp-for="Repetitions" class="form-control" />
                        <span asp-validation-for="Repetitions" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Sets" class="form-label fw-bold"></label>
                        <input asp-for="Sets" class="form-control" />
                        <span asp-validation-for="Sets" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RestTime" class="form-label fw-bold"></label>
                        <input asp-for="RestTime" class="form-control" />
                        <span asp-validation-for="RestTime" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="DayOfWeek" class="form-label fw-bold">Day of the Week</label>
                        <select asp-for="DayOfWeek" class="form-select" asp-items="ViewBag.DaysOfWeek">
                            <option value="">-- Select Day --</option>
                        </select>
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-success px-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
