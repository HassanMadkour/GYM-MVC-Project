@{
    ViewData["Title"] = "Check Your Email";
    Layout = "_AuthLayout";
}



<div class="auth-card text-center">
    <div class="mb-4">
        <i class="fas fa-envelope-circle-check" style="font-size: 4rem; color: var(--primary);"></i>
    </div>

    <h1 class="auth-title">Check Your Email</h1>
    <p class="auth-subtitle">
        We've sent a confirmation link to your email.<br />
        Please check your inbox and click the link to activate your account.
    </p>

    <a class="btn btn-primary mt-4" href="/">Back to Home</a>
</div>