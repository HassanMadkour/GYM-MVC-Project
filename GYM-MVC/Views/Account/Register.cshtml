@model GYM_MVC.ViewModels.RegisterMemberViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";

}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GYM_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand fs-3" href="#">Force GYM</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Locations</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="register-page" >
    <div class="blur-overlay text-dark">
    <h2 class="text-center mb-4 text-dark">Register Member</h2>

    <form asp-action="RegisterTheMember">
        <div asp-validation-summary="ModelOnly" class="text-danger col-md-6"></div>
            <div class="row">
            <div class="col-md-6">
            <label asp-for="MemberName" class="form-label"></label>
            <input asp-for="MemberName" class="form-control" />
            <span asp-validation-for="MemberName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="BirthDate" class="form-label"></label>
            <input asp-for="BirthDate" class="form-control" type="date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="MaterialStatus" class="form-label"></label>
            <input asp-for="MaterialStatus" class="form-control" />
            <span asp-validation-for="MaterialStatus" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Weight" class="form-label"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Height" class="form-label"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Illnesses" class="form-label"></label>
            <input asp-for="Illnesses" class="form-control" />
            <span asp-validation-for="Illnesses" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Injuries" class="form-label"></label>
            <input asp-for="Injuries" class="form-control" />
            <span asp-validation-for="Injuries" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SleepHours" class="form-label"></label>
            <input asp-for="SleepHours" class="form-control" />
            <span asp-validation-for="SleepHours" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="AvailableDays" class="form-label"></label>
            <input asp-for="AvailableDays" class="form-control" />
            <span asp-validation-for="AvailableDays" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Name" class="form-label">User Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

                <div class="col-md-12 mt-4 d-flex justify-content-center">
                    <input type="submit" value="Register" class="btn btn-primary w-50" />
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="text-dark">Back to List</a>
    </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
