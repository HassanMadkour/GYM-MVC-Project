@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
@model GYM_MVC.ViewModels.LoginUserViewModel

<div class="login-page">
    <div class="login-box">
        <h2 class="mb-4 text-center">Login</h2>
        <form asp-action="LoginTheUser">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">User Name</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <a href="ForgetPassword"> Forget Password</a>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-action="Register" class="btn btn-outline-secondary">Register</a>
            </div>
        </form>
    </div>
</div>
