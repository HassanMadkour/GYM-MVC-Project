@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var classSchedule = ViewBag.ScheduleTable ?? new List<dynamic>();
}
    
<table class="table table-hover mb-0">
    <thead class="bg-dark text-white">
        <tr>
            <th>Time</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in classSchedule)
        {
            <tr>
                <td class="fw-bold">@row.Time</td>
                <td>@(string.IsNullOrWhiteSpace(row.Monday) ? "-" : row.Monday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Tuesday) ? "-" : row.Tuesday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Wednesday) ? "-" : row.Wednesday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Thursday) ? "-" : row.Thursday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Friday) ? "-" : row.Friday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Saturday) ? "-" : row.Saturday)</td>
                <td>@(string.IsNullOrWhiteSpace(row.Sunday) ? "-" : row.Sunday)</td>
            </tr>
        }
    </tbody>
</table>

