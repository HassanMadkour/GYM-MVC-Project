@model GYM_MVC.ViewModels.MemberViewModels.MemberViewModel
@{
    ViewData["Title"] = "Member Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-center">Member Details / Edit</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <partial name="_MemberFormFields" />
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-success px-5">Update</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </div>
</form>
