@using GYM_MVC.ViewModels.WorkoutPlansViewModels
@model DisplayWorkoutPlanVM

@{
    ViewData["Title"] = "Active WorkOut Plan";
    Layout = "_MainLayout";
}
<style>
    .w-40{
        width:40%
    }
</style>

<div class="d-flex justify-content-between">

    <div class="alert alert-light w-40">
        <h2 class="text-center m-auto">Current Workout Plan</h2>
        <dl class="row p-4" >
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>    

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">General Info</dt>
            <dd class="col-sm-9">@Model.GeneralInfo</dd>

            <dt class="col-sm-3">Injury Info</dt>
            <dd class="col-sm-9">@Model.InjuryInfo</dd>

            <dt class="col-sm-3">Member ID</dt>
            <dd class="col-sm-9">@Model.MemberId</dd>

            <dt class="col-sm-3">Member Name</dt>
            <dd class="col-sm-9">@Model.MemberName</dd>

            <dt class="col-sm-3">Trainer Name</dt>
            <dd class="col-sm-9">@Model.TrainerName</dd>
        </dl>
    </div>

    <div class="w-50">
        <h2 class="text-center ">Exercises </h2>
        <table class="table table-responsive  m-auto mt-3 table-bordered  text-center">
            <thead>
                <tr>

                    <th>

                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Repititions")
                    </th>
                    <th>
                        @Html.DisplayName("Sets")
                    </th>
                    <th>
                        @Html.DisplayName("RestTime")
                    </th>
                    <th>
                        @Html.DisplayName("DayOfWeek")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Exercises)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Repetitions)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sets)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DayOfWeek)
                        </td>
                    </tr>
                }

                @if (!Model.Exercises.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted fs-2">No Exercises to show</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>