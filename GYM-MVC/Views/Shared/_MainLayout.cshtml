@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Force Gym</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Oswald:wght@500;600&display=swap">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@* <link rel="stylesheet" href="~/GYM_MVC.styles.css" asp-append-version="true" /> *@
	@RenderSection("Styles", required: false)
</head>
<body>

	<div class="d-flex flex-column min-vh-100">
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
				<div class="container">
					<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
						<i class="fas fa-dumbbell text-light p-1"></i>
						For<span class="s">ce</span>
					</a>
					@if (User.Identity.IsAuthenticated)
					{
						<a class="navbar-brand fs-6" asp-area="" asp-controller="Home" asp-action="Index">Hello, @User.Identity.Name</a>
					}

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#schedule">Classes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#trainers">Trainers</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="#footer">Contact</a>
							</li>
							<li class="nav-item ms-lg-3">
								@if (User.Identity.IsAuthenticated)
								{
									if (User.IsInRole("Member"))
									{
										var usedId = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier).Value;
										<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											<i class="fas fa-user"></i>
										</a>
										<ul class="dropdown-menu">
											<li><a class="dropdown-item" asp-controller="Member" asp-action="Details" asp-route-id="@usedId">Profile</a></li>
											<li><a class="dropdown-item" asp-controller="Member" asp-action="ActiveWorkOutPlan" asp-route-id="@usedId">Workout Plan</a></li>
											<li><a class="dropdown-item"asp-controller="Account" asp-action="Logout">Logout</a></li>
										</ul>


									}
									else
									{
										<a class="btn btn-primary rounded-pill" asp-action="Logout" asp-controller="Account">Logout</a>

									}

								}
								else
								{
									<a class="btn btn-primary rounded-pill" asp-action="Login" asp-controller="Account">Login</a>

								}
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<div class="container-fluid p-0">
			<main role="main" class="flex-grow-1">
				@RenderBody()
			</main>
		</div>

		<footer class="bg-dark gap-2 pt-5 text-white" id="footer">
			<div class="container">
				<div class="row">
					<div class="col-lg-4 mb-4">
						<h5 class="text-uppercase mb-4">
							<i class="fas fa-dumbbell text-light"></i>
							Force Gym
						</h5>
						<p>Your premier fitness destination with state-of-the-art facilities and expert trainers to help you achieve your fitness goals.</p>

					</div>

					<div class="col-lg-3 col-md-6 mb-4">
						<h5 class="text-uppercase mb-4">Opening Hours</h5>
						<ul class="list-unstyled">
							<li class="mb-2">Monday - Friday: 6:00 AM - 10:00 PM</li>
							<li class="mb-2">Saturday: 8:00 AM - 8:00 PM</li>
							<li class="mb-2">Sunday: 8:00 AM - 6:00 PM</li>
						</ul>
					</div>
					<div class="col-lg-3 col-md-6 mb-4">
						<h5 class="text-uppercase mb-4">Contact Us</h5>
						<address>
							<p><i class="fas fa-map-marker-alt me-2"></i> 123 Fitness Avenue, shibin elkom, monofia</p>
							<p><i class="fas fa-phone me-2"></i> 01234567890</p>
							<p><i class="fas fa-envelope me-2"></i> info@Forcegym.com</p>
						</address>
					</div>
				</div>
				<hr class="mb-4">
				<div class="row align-items-center">
					<div class="col-md-6 text-md-start text-center">
						<p class="mb-0">&copy; @DateTime.Now.Year Force Gym. All rights reserved.</p>
					</div>
					<div class="col-md-6 text-md-end text-center">
						<p class="mb-0">Designed with <i class="fas fa-heart text-danger"></i> for fitness enthusiasts</p>
					</div>
				</div>
			</div>
		</footer>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>