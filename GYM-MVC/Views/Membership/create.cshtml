@model CreateMembershipViewModel
@{
    ViewData["Title"] = "Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="create" , asp-controller="Membership" class="form-control pt-5">

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DurationInDays"></label>
        <input asp-for="DurationInDays" class="form-control" />
        <span asp-validation-for="DurationInDays" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div> 
        <select asp-for="MembershipType" class="form-control">
        </select>
    </div>
    



</form>
