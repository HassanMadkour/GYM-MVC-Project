@model GYM_MVC.ViewModels.MembershipViewModels.UpdateMembershipViewModel

@{
    ViewData["Title"] = "Update Membership";
}

<br />
<br />

<br />

<div class="container mt-5">
    <div class="mb-4 text-center">
        <h2 class="fw-bold">Update Membership</h2>
        <hr class="w-25 mx-auto">
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update" class="card rounded p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="SelectedMembershipType" class="form-label fw-semibold"></label>
                    <select asp-for="SelectedMembershipType" class="form-select" asp-items="Model.MembershipTypeList">
                        <option value="">-- Select Membership Type --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DurationInDays" class="form-label fw-semibold"></label>
                    <input asp-for="DurationInDays" class="form-control" />
                    <span asp-validation-for="DurationInDays" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary bg-dark">Save</button>
                </div>
            </form>
        </div>
    </div>
    <br />
    <br />

</div>
